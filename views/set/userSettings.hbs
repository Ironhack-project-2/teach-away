<!-- views/auth/signup.hbs -->
<div class="container panels">
  <div class="row">
    <div class="col-5 area">
      <h4>Edita tu perfil</h4>
      <form action="/set/userSettings" method="POST" id="form-container">
        <div class="form-group">
          <label for="username">Cambia tu nombre de usuario</label>
          <input type="name" class="form-control" name="username" id="username" placeholder={{user.username}}>
        </div>
        <div class="form-group">
          <label for="password">Cambia tu nombre de contrase単a</label>
          <input type="password" class="form-control" name="password" id="password" placeholder="Contrase単a">
        </div>
        <div class="form-group">
          <label for="password">Confirma tu contrase単a</label>
          <input type="password" class="form-control" name="password2" id="password2" placeholder="Repita contrase単a">
        </div>
        <div class="form-group">
          <label for="email">Cambia tu email</label>
          <input type="email" class="form-control" name="email" id="email" placeholder={{user.email}}>
        </div>

        {{#if message }}
        <div class="error-message">{{ message }}</div>
        {{/if}}
        <button type="submit" class="btn btn-primary buttonCenter">Confirmar cambios</button>
      </form>

      <p class="account-message">
        Descartar cambios
        <a href="/student/studentPanel">Volver al panel de usuario</a>
      </p>


    </div>
  </div>


</div>