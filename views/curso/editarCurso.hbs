<div class="container">
    <div class="row">
        <div clas="col">
            <h3>Nombre: {{obj.curso.nombre}}</h3>
            <h4>Descripci√≥n: {{obj.curso.descripcion}}</h4>
            <h4>Nivel: {{obj.curso.nivel}}</h4>
            <h4>Lecciones: {{obj.curso.lecciones}}</h4>
        </div>
    </div>
</div>

<div>
    {{#if obj.aulas}}
        {{#each obj.aulas}}
            <h5>Horario: {{this._id}}</h5>
            {{#each this.fechas}}
                    <p>Hora:{{this.fechaLeccion}}</p>
             {{/each}}
        {{/each}}
    {{/if}}
</div>
{{#if message }}
    <div class="error-message">{{ message }}</div>
  {{/if}}

<div class="container">
    <div class="row">
        <div clas="col">
            <form action="/curso/editarCurso/{{obj.curso._id}}" method="POST" id="form-container">
                <div class="form-group row">
                    <div class="col-3">
                        <div class="row">
                            <div class="col-2">
                                <label for="example-date-input" class="col-form-label">Date</label>
                            </div>
                            <div class="col-10">
                                <input class="form-control" type="date" name="fecha" value="2018-08-19" id="example-date-input">
                            </div>
                        </div>
                    </div>
                    
                        <div class="col-3">
                            <div class="row">
                            <div class="col-2">
                                <label for="example-time-input" class="col-form-label">Time</label>
                            </div>
                            <div class="col-10">
                                <input class="form-control" type="time" name="hora" value="12:00:00" id="example-time-input">
                            </div>
                        </div>
                    </div>
                    
                        <div class="col-3">
                            <div class="row">
                            <div class="col-3">
                                <label for="example-number-input" class="col-form-label">Alumnos</label>
                            </div>
                            <div class="col-9">
                                <input class="form-control" type="number" name="numeroAlumnos" value="5" id="example-number-input">
                            </div>
                        </div>
                    </div>


                    <div class="col-3">
                        <button type="submit" class="btn btn-primary buttonCenter">Crear aulas</button>
                    </div>
                </div>
                <div class="form-group row">
                </div>
            </form>
        </div>
    </div>
</div>