<div class="container registerContainer">
  <div class="row">
    <div class="col-5 registerForms">
      <h4> Login</h4>
      <form action="/auth/login" method="POST" id="form-container">
        <div class="form-group">
          <label for="username">Nombre de Usuario</label>
          <input type="name" class="form-control" name="username" id="username" aria-describedby="emailHelp" placeholder="Nombre de usuario">
        </div>
        <div class="form-group">
          <label for="password">Contraseña</label>
          <input type="password" class="form-control" name="password" id="password" placeholder="Contraseña">
        </div>
        {{#if message }}
        <div class="error-message">{{ message }}</div>
        {{/if}}
        <button type="submit" class="btn btn-primary buttonCenter">Login</button>
      </form>

      <p class="account-message">No tienes cuenta todavía?
        <a href="/auth/login">Registrate en la plataforma</a>
      </p>


    </div>
  </div>


</div>