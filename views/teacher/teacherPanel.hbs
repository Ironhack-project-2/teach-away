<div class="container panels">
  <div class="row encabezado">
    <div class="col-12">
      <h4>
        <b>{{ obj.user.username}}</b>
      </h4>
    </div>
  </div>
  <div class="row justify-content-between">
    <div class="col-7">
      <div class="row">
        <div class="col-12 ">
          {{#if obj.cursos}}
          <h4>Lista de Cursos asignados</h4>
          {{#each obj.cursos}}
          <div class="row area">
            <div class="col-8">
              <h5>Curso de {{this.nombre}}</h5>
            </div>
            <div class="col-4 floatRigthText">
              <h6>Nivel: {{this.nivel}}</h6>
            </div>
            <div class="col-12">
              <span>
                <b>Descripción</b>
              </span>
              <br> {{this.descripcion}}
              <span>
                <br><br>
                <b>Aulas</b>
              </span>
              <br><br>
              <a href="/curso/editarCurso/{{this._id}}">Editar aulas</a>
              </p>
            </div>
          </div>
          {{/each}} {{/if}}
          <br>
        </div>
      </div>

    </div>
    <div class="col-4">
      <div class="row">
        <div class="col-12 ">
          <h4>Alta de Curso</h4>
          <div class="area">
            <form action="/teacher/teacherPanel" method="POST" id="add-curso-container">
              <div class="form-group">
                <label for="nombre">Nombre del Curso</label>
                <input type="name" class="form-control" name="nombre" id="nombre" placeholder="Nombre de curso">
              </div>
              <div class="form-group">
                <label for="descripcion">Descripción</label>
                <input type="descripcion" class="form-control" name="descripcion" id="descripcion" placeholder="Decribe brevemente el curso">
              </div>
              <div class="form-group">
                <label for="nivel">Nivel</label>
                <input type="number" class="form-control" name="nivel" id="nivel" placeholder="Selecciona el nivel">
              </div>
              <div class="form-group">
                <label for="lecciones">Número de lecciones</label>
                <input type="number" class="form-control" name="lecciones" id="lecciones" placeholder="Número de lecciones">
              </div>

              {{#if message }}
              <div class="error-message">{{ message }}</div>
              {{/if}}
              <button type="submit" class="btn btn-primary buttonCenter">Crear Curso</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>